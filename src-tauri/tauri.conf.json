{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "WhispTune",
  "version": "0.1.3",
  "identifier": "com.whisptune.app",
  "build": {
    "frontendDist": "../src"
  },
   "plugins": {
    "updater": {
      "active": true,
      "endpoints": [],
      "pubkey": ""
    }
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "WhispTune - Where melodies drift like the wind",
        "width": 750,
        "height": 750
      }
    ],
    "security": {
      "csp": "default-src 'self'; media-src * blob:; img-src 'self' blob: data: https://i.ytimg.com https://img.youtube.com;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "msi",
    "license": "./LICENSE",
    "publisher": "UchihaPaul",
    "resources":[
      "bin/yt-dlp.exe"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "allowDowngrades": false,
      "certificateThumbprint": null,
      "digestAlgorithm": null,
      "nsis": null,
      "signCommand": null,
      "timestampUrl": null,
      "tsp": false,
      "webviewInstallMode": {
        "type": "skip"
      },
      "wix":null
    }
  }
}
